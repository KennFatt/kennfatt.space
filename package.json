{
  "name": "kennfatt.space",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 9090",
    "lint": "next lint",
    "fmt": "prettier --write \"./src\"",
    "prepare": "husky install",
    "new:component": "plop component",
    "new:component-blocks": "plop component-blocks",
    "new:component-utils": "plop component-utils",
    "new:component-layout": "plop component-layout",
    "apollo:generate-schema": "apollo client:download-schema schema.graphql",
    "apollo:codegen": "rm -rf src/graphql/model && apollo client:codegen --target typescript --outputFlat src/graphql/model"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@next/bundle-analyzer": "^12.0.7",
    "autoprefixer": "^10.4.0",
    "next": "^12.0.7",
    "nprogress": "^0.2.0",
    "postcss": "^8.4.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "^7.1.1",
    "react-responsive": "^9.0.0-beta.5",
    "sass": "^1.44.0",
    "sharp": "^0.29.3",
    "tailwindcss": "^3.0.0",
    "zustand": "^3.6.7"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.37",
    "apollo": "^2.33.9",
    "clsx": "^1.1.1",
    "eslint": "<8.4.1",
    "eslint-config-next": "12.0.7",
    "husky": "^7.0.4",
    "lint-staged": ">=12.1.2",
    "plop": "^3.0.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "./{src,styles}/**/*.{ts,tsx,scss}": "prettier --write"
  }
}
